<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shinjaehun.annyeonghallasan.MainActivity"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <FrameLayout
            android:id="@+id/layout_road_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#E3F2FD">

            <ImageView
                android:id="@+id/map_jejudo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jejudo" />

            <ImageView
                android:id="@+id/road_1100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/road_1100"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/road_516"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/road_516"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/road_aejo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/road_aejo"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/road_beonyeong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/road_beonyeong"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/road_bija"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/road_bija"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/road_cheomdan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/road_cheomdan"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/road_hanchang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/road_hanchang"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/road_ilju"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/road_ilju"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/road_myeongnim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/road_myeongnim"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/road_namjo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/road_namjo"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/road_pyeonghwa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/road_pyeonghwa"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/road_sallok1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/road_sallok1"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/road_sallok2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/road_sallok2"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/road_seoseong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/road_seoseong"
                android:visibility="gone" />

            <TextView
                android:id="@+id/normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="정상운행"
                android:textAlignment="center"
                android:textSize="40dp"
                android:visibility="gone" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/weather_img_hallasan"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/weather_none"/>

                    <TextView
                        android:id="@+id/weather_hallasan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="n/a"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="6dp"
                    android:paddingRight="16dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/info_hallasan"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/temperature_hallasan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="n/a"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="℃"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/wind_hallasan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="n/a"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="m/s"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/humidity_hallasan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="n/a"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="%" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/weather_Img_eorimok"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/weather_none"/>

                    <TextView
                        android:id="@+id/weather_eorimok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="n/a"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="6dp"
                    android:paddingRight="16dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/info_eorimok"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/temperature_eorimok"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="n/a"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="℃"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/wind_eorimok"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="n/a"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="m/s"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/humidity_eorimok"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="n/a"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="%" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>





            <!--
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/weather_none" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="6dp"
                    android:paddingRight="16dp">

                    <TextView
                        android:id="@+id/weather_eorimok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="어리목" />


                </LinearLayout>




            </LinearLayout>
            -->


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/weather_yeongsil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="영실" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/weather_none" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/weather_seongpanak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="성판악" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/weather_none" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/weather_kwanumsa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="관음사" />

            <TextView
                android:id="@+id/weather_donnaeko"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="돈내코" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
